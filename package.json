    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "ai": "^4.3.19",
      "@ai-sdk/google": "1.2.22",
      "@convex-dev/workpool": "0.2.14"
    }
  }
